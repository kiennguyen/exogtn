<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                 "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<!--<display-name>gatein-oauth-extension-war</display-name>-->
  <display-name>exo-oauth-provider</display-name>

  <filter>
     <filter-name>PortalContainerInitializedFilter</filter-name>
     <filter-class>org.exoplatform.ws.frameworks.servlet.PortalContainerInitializedFilter</filter-class>
  </filter>
  <filter>
    <filter-name>InitTransactionFilter</filter-name>
    <filter-class>org.exoplatform.oauth.provider.InitTransactionFilter</filter-class>
  </filter>
  <filter>
     <filter-name>ExoOAuth3LeggedFilter</filter-name>
     <filter-class>org.exoplatform.oauth.provider.ExoOAuth3LeggedFilter</filter-class>
  </filter>
  <filter>
     <filter-name>ExoOAuth2LeggedFilter</filter-name>
     <filter-class>org.exoplatform.oauth.provider.ExoOAuth2LeggedFilter</filter-class>
  </filter>
  <filter>
     <filter-name>RestEncodingFilter</filter-name>
     <filter-class>org.exoplatform.services.rest.servlet.RestEncodingFilter</filter-class>
     <init-param>
        <param-name>REQUEST_ENCODING</param-name>
        <param-value>UTF-8</param-value>
     </init-param>
  </filter>

  <filter-mapping>
     <filter-name>PortalContainerInitializedFilter</filter-name>
     <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
     <filter-name>InitTransactionFilter</filter-name>
     <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
     <filter-name>ExoOAuth2LeggedFilter</filter-name>
     <url-pattern>/rest/SocialRest/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
     <filter-name>ExoOAuth3LeggedFilter</filter-name>
     <url-pattern>/rest/SimpleRest/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
     <filter-name>ExoOAuth3LeggedFilter</filter-name>
     <url-pattern>/echo</url-pattern>
  </filter-mapping>
  <filter-mapping>
     <filter-name>RestEncodingFilter</filter-name>
     <url-pattern>/rest/*</url-pattern>
  </filter-mapping>



	<!-- ================================================================== -->
	<!--           LISTENER                                                 -->
	<!-- ================================================================== -->
	<listener>
		<listener-class>org.exoplatform.container.web.PortalContainerConfigOwner</listener-class>
	</listener>

  <!-- ========================================================= -->
  <!-- SERVLET -->
  <!-- ========================================================= -->
  <servlet>
     <servlet-name>ExoRequestTokenServlet</servlet-name>
     <servlet-class>org.exoplatform.oauth.provider.ExoRequestTokenServlet</servlet-class>
  </servlet>
  <servlet>
     <servlet-name>ExoAuthorizationServlet</servlet-name>
     <servlet-class>org.exoplatform.oauth.provider.ExoAuthorizationServlet</servlet-class>
  </servlet>
  <servlet>
     <servlet-name>ExoAccessTokenServlet</servlet-name>
     <servlet-class>org.exoplatform.oauth.provider.ExoAccessTokenServlet</servlet-class>
  </servlet>
  <servlet>
     <servlet-name>OAuthProtectedServlet</servlet-name>
     <servlet-class>org.exoplatform.oauth.provider.example.servlet.OAuthProtectedServlet</servlet-class>
  </servlet>
  <servlet>
     <servlet-name>RestServer</servlet-name>
     <servlet-class>org.exoplatform.services.rest.servlet.RestServlet</servlet-class>
     <load-on-startup>4</load-on-startup>
  </servlet>

  <servlet-mapping>
     <servlet-name>ExoRequestTokenServlet</servlet-name>
     <url-pattern>/request_token</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
     <servlet-name>ExoAuthorizationServlet</servlet-name>
     <url-pattern>/authorize</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
     <servlet-name>ExoAccessTokenServlet</servlet-name>
     <url-pattern>/access_token</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
     <servlet-name>OAuthProtectedServlet</servlet-name>
     <url-pattern>/echo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
     <servlet-name>RestServer</servlet-name>
     <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

</web-app>