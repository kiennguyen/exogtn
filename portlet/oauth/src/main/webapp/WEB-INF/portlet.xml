<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

   <portlet>
      <portlet-name>UIShindigOAuth</portlet-name>
      <display-name xml:lang="EN">Shindig OAuth Store</display-name>
      <portlet-class>org.juzu.portlet.JuzuPortlet</portlet-class>
      <init-param>
         <name>juzu.app_name</name>
         <value>ManagementApplication</value>
      </init-param>
      <init-param>
         <name>juzu.run_mode</name>
         <value>prod</value>
      </init-param>
      <init-param>
         <name>juzu.inject</name>
         <value>spring</value>
      </init-param>
      <supports>
         <mime-type>text/html</mime-type>
      </supports>
      <portlet-info>
         <title>Shindig OAuth Store</title>
         <keywords>juzu</keywords>
      </portlet-info>
   </portlet>
   <filter>
      <filter-name>HeaderFilter</filter-name>
      <filter-class>org.exoplatform.oauth.shindig.management.filters.HeaderFilter</filter-class>
      <lifecycle>RENDER_PHASE</lifecycle>
   </filter>
   <filter-mapping>
      <filter-name>HeaderFilter</filter-name>
      <portlet-name>UIShindigOAuth</portlet-name>
   </filter-mapping>
</portlet-app>